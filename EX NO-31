#include <stdio.h>
#include <string.h>

#define MAX 100

struct Directory {
    char dname[20];
    char fname[20][20];
    int fcount;
};

int main() {
    struct Directory dir;
    int choice;
    char fname[20];

    printf("Enter directory name: ");
    scanf("%s", dir.dname);

    dir.fcount = 0;

    while (1) {
        printf("\n--- SINGLE LEVEL DIRECTORY ---\n");
        printf("1. Create File\n");
        printf("2. Search File\n");
        printf("3. Delete File\n");
        printf("4. Display Files\n");
        printf("5. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
        case 1:
            if (dir.fcount == MAX) {
                printf("Directory full! Cannot add more files.\n");
                break;
            }
            printf("Enter file name to create: ");
            scanf("%s", fname);

            // Check duplicate
            for (int i = 0; i < dir.fcount; i++) {
                if (strcmp(fname, dir.fname[i]) == 0) {
                    printf("File already exists!\n");
                    goto end_create;
                }
            }

            strcpy(dir.fname[dir.fcount], fname);
            dir.fcount++;
            printf("File created successfully.\n");
        end_create:
            break;

        case 2:
            printf("Enter file name to search: ");
            scanf("%s", fname);

            for (int i = 0; i < dir.fcount; i++) {
                if (strcmp(fname, dir.fname[i]) == 0) {
                    printf("File found in directory.\n");
                    goto end_search;
                }
            }
            printf("File not found.\n");
        end_search:
            break;

        case 3:
            printf("Enter file name to delete: ");
            scanf("%s", fname);

            for (int i = 0; i < dir.fcount; i++) {
                if (strcmp(fname, dir.fname[i]) == 0) {
                    printf("File deleted.\n");
                    dir.fcount--;
                    strcpy(dir.fname[i], dir.fname[dir.fcount]);
                    goto end_delete;
                }
            }
            printf("File not found.\n");
        end_delete:
            break;

        case 4:
            if (dir.fcount == 0) {
                printf("Directory is empty.\n");
                break;
            }
            printf("Directory %s contains:\n", dir.dname);
            for (int i = 0; i < dir.fcount; i++) {
                printf("%s\n", dir.fname[i]);
            }
            break;

        case 5:
            return 0;

        default:
            printf("Invalid choice!\n");
        }
    }
}
