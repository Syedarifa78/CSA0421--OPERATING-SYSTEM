#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>

int main() {
    int fd;
    char buffer[100];

    // -------------------------------
    // 1. OPEN a file
    // -------------------------------
    fd = open("sample.txt", O_RDWR | O_CREAT, 0644);
    if (fd < 0) {
        perror("open");
        return 1;
    }
    printf("File opened successfully. FD = %d\n", fd);

    // -------------------------------
    // 2. WRITE to file
    // -------------------------------
    char *text = "Hello, this is a file management test.\n";
    write(fd, text, 38);
    printf("Write successful.\n");

    // -------------------------------
    // 3. LSEEK â€“ move file pointer
    // -------------------------------
    lseek(fd, 0, SEEK_SET);
    printf("Pointer moved to beginning.\n");

    // -------------------------------
    // 4. READ from file
    // -------------------------------
    int n = read(fd, buffer, sizeof(buffer) - 1);
    buffer[n] = '\0';
    printf("Data read from file:\n%s", buffer);

    // -------------------------------
    // 5. CLOSE the file
    // -------------------------------
    close(fd);
    printf("\nFile closed successfully.\n");

    return 0;
}
