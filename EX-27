#include <stdio.h>
#include <sys/ipc.h>
#include <sys/shm.h>
#include <unistd.h>
#include <string.h>
#include <sys/wait.h>

int main() {
    key_t key = ftok("shmfile", 65);     // Generate unique key
    int shmid = shmget(key, 1024, 0666 | IPC_CREAT);

    if (shmid < 0) {
        perror("shmget error");
        return 1;
    }

    char *shared_mem = (char*) shmat(shmid, NULL, 0);

    if (shared_mem == (char*) -1) {
        perror("shmat error");
        return 1;
    }

    pid_t pid = fork();

    if (pid < 0) {
        perror("fork error");
        return 1;
    }

    if (pid > 0) {
        strcpy(shared_mem, "Hello from the parent using shared memory!");
        printf("Parent (Writer): Data written to shared memory.\n");

        wait(NULL);  // Wait for child

       
        shmdt(shared_mem);
        shmctl(shmid, IPC_RMID, NULL);
    }

    else {
        sleep(1);  // Ensure parent writes first

        printf("Child (Reader): Data read from shared memory: %s\n", shared_mem);

        shmdt(shared_mem);
    }

    return 0;
}

