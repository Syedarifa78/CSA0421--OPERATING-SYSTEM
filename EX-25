#include <stdio.h>
#include <sys/stat.h>

int main() {
    struct stat s;
    stat("file.txt", &s);

    printf("OWNER  : %c%c%c\n",
        (s.st_mode & S_IRUSR ? 'r' : '-'),
        (s.st_mode & S_IWUSR ? 'w' : '-'),
        (s.st_mode & S_IXUSR ? 'x' : '-'));

    printf("GROUP  : %c%c%c\n",
        (s.st_mode & S_IRGRP ? 'r' : '-'),
        (s.st_mode & S_IWGRP ? 'w' : '-'),
        (s.st_mode & S_IXGRP ? 'x' : '-'));

    printf("OTHERS : %c%c%c\n",
        (s.st_mode & S_IROTH ? 'r' : '-'),
        (s.st_mode & S_IWOTH ? 'w' : '-'),
        (s.st_mode & S_IXOTH ? 'x' : '-'));
    return 0;
}
